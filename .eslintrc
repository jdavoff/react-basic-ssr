{
	"env": {
		"node": true,
		"mocha": true,
		"browser": true,
		"es6": true
	},
	"plugins": [
		"async-await",
		"prettier"
	],
	"extends": [
		"prettier",
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		//Style configuration
		"space-before-function-paren": [
			2,
			{
				"anonymous": "always",
				"named": "never"
			}
		],
		"no-use-before-define": [
			2,
			"nofunc"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"quotes": [
			2,
			"single"
		],
		//ECMAScript 6
		"no-var": 2,
		"prefer-arrow-callback": 2,
		"prefer-const": 2,
		"object-shorthand": 2,
		"arrow-spacing": 2,
		"no-const-assign": 2,
		"prefer-rest-params": 2,
		"prefer-template": 2,
		"async-await/space-after-async": 2,
		"async-await/space-after-await": 2,
		//Best Practices
		"no-multi-spaces": 2,
		"no-alert": 2,
		"no-console": 0,
		"no-new-wrappers": 2,
		"no-useless-concat": 2,
		"no-self-compare": 2,
		"no-trailing-spaces": 2,
		"radix": 2,
		"no-magic-numbers": 0,
		"no-floating-decimal": 2
	}
}
